create database if not exists crunch;

use crunch;

create table if not exists projects
(
projectID int not null primary key auto_increment,
projectName varchar(255) not null,
industry varchar(255) not null,
pDescription text(65535) not null,
totalInflow float(5,2) not null,
totalOutflow float(5,2) not null
);


create table if not exists project_duration 
(
projDurationID int not null primary key auto_increment, 
startTime date not null,
endTime date not null,
duration int not null,
FOREIGN KEY ( projDurationID ) REFERENCES projects(projectID) ON DELETE CASCADE
);


